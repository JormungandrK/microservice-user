{
  "service":{
    "name": "user-microservice",
    "port": 8080,
    "paths": ["/users"],
    "virtual_host": "user.services.jormungandr.org",
    "hosts": ["localhost", "user.services.jormungandr.org"],
    "weight": 10,
    "slots": 100
  },
  "gatewayUrl": "http://kong:8000",
  "security":{
    "keysDir": "/run/secrets",
    "jwt":{
      "name": "JWTSecurity",
      "description": "JWT security middleware",
      "tokenUrl": "http://kong:8000/jwt"
    },
    "saml":{
      "certFile": "/run/secrets/service.cert",
      "keyFile": "/run/secrets/service.key",
      "identityProviderUrl": "http://kong:8000/saml/idp",
      "userServiceUrl": "http://kong:8000/user",
      "registrationServiceUrl": "http://kong:8000/user/register"
    },
    "oauth2":{
      "description": "OAuth2 security middleware",
      "tokenUrl": "https://kong:8000/oauth2/token",
      "authorizeUrl": "https://kong:8000/oauth2/authorize"
    }
  },
  "database":{
    "host": "mongo:27017",
    "database": "users",
    "user": "restapi",
    "pass": "restapi"
  }
}
